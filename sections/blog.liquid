{{ 'blog.css' | asset_url | stylesheet_tag }}

<section class="blog">
    <h1 class="blog-title">{{ blog.title }}</h1>
    <div class="blog-articles">

        {% for article in blog.articles %}
            <div class="article-card">
                <img width="500" height="500" loading="lazy" src="{{ article.image.src | img_url: 'large', crop: 'center' }}" alt="">
                <h2 class="article-title">{{ article.title }}</h2>
                <p class="article-excerpt">{{ article.excerpt }}</p>
                <h3>Author:
                    {{ article.author }}</h3>
                <span>Created:
                    {{ article.created_at | date: format: 'abbreviated_date'}}</span>
                <span>Last Update:
                    {{ article.updated_at | date: format: 'abbreviated_date'}}</span>
                <a href="{{ article.handle }}" class="article-btn btn btn-primary">Read More</a>
            </div>
        {% endfor %}

    </div>

</section>