{% render 'hero-css'%}

<section class="hero">
    <div class="hero__content">

        <div class="hero__content-image">
            <div></div>
        </div>

        <div class="hero__content-card">
            <h1>{{ section.settings.heading}}</h1>
            <p>{{ section.settings.para }}</p>
            <a class="btn btn-primary" href="{{ section.settings.btn_link }}">{{ section.settings.btn_text}}</a>
        </div>

    </div>
</section>

{% schema %}
{
    "name": "Hero",
    "settings": [
    {
        "type": "header",
        "content": "Card Text"
    },
    {
        "type": "text",
        "id": "heading",
        "label": "Heading Text",
        "default": "Hi There! Welcome To You Are!"
    },
    {
        "type": "textarea",
        "id": "para",
        "label": "Paragraph Text",
        "default": "Where everytime we make  sale, a box is donated to a child in a low income area."
    },
    {
        "type": "header",
        "content": "Buttons"
    },
    {
        "type": "url",
        "id": "btn_link",
        "label": "Button Link"
    },
    {
        "type": "text",
        "id": "btn_text",
        "label": "Button Text",
        "default": "Buy Now"
    }
    ],
    "presets": [
        {
            "name":"Hero"
        }
    ]
}
{% endschema %}