{% render 'logo-list-css' %}

<section class="logo-list">

    <div class="logo-list__icon">
        <img width="100" height="100" loading="lazy" alt="" src="{{'icon-1.svg' | asset_url }}">
        <h2>{{ section.settings.icon1-text}}</h2>
    </div>

    <div class="logo-list__icon">
        <img width="120" height="120" loading="lazy" alt="" src="{{'icon-2.svg' | asset_url }}">
        <h2>{{ section.settings.icon2-text }}</h2>
    </div>

    <div class="logo-list__icon">
        <img width="100" height="100" loading="lazy" alt="" src="{{'icon-3.svg' | asset_url }}">
        <h2>{{ section.settings.icon3-text }}</h2>
    </div>

</section>

{% schema %}
{
    "name": "Logo List",
    "settings": [
        {
            "type": "text",
            "id": "icon1-text",
            "label": "Text For Icon",
            "default": "100% Minority Owned"
        },
        {
            "type": "text",
            "id": "icon2-text",
            "label": "Text For Icon",
            "default": "Over 1,000 Boxes Sold"
        },
        {
            "type": "text",
            "id": "icon3-text",
            "label": "Text For Icon",
            "default": "Free US Shipping On Orders Over 30$"
        }
    ],
    "presets": [
        {
            "name":"Logo List"
        }
    ]
}
{% endschema %}