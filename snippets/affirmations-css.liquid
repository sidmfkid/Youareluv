{% style %}
.affirmations {
    display: flex;
    background-color: var(--primary-95);
    flex-wrap: wrap;
    justify-content: center;
  }
  
  .affirmations h2 {
    font-size: var(--large);
    color: var(--primary-30);
    text-align: center;
    margin-bottom: 5rem;
  }
  
  .affirmations__content {
    width: 100%;
    height: min-content;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0 20rem 5rem 20rem;
  }

  .affirmations__content .crayon-container {
    width: 100%;
    height: 100%;
    border-radius: 100px;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
    filter: brightness(1) drop-shadow(0rem 0.3rem 0.3rem var(--primary-30));
    transform: translateY(0);
    transition: all 0.3s ease-in-out;
  }
  .affirmations__content .crayon-container:active,
  .affirmations__content .crayon-container:hover {
    transform: scale(1.1);
    filter: brightness(1.1) drop-shadow(0rem 0.5rem 0.8rem var(--primary-30));
    transform: translateY(-3rem);
  }

  .affirmations__content .crayon-container img {
    width: 50rem;
    height: auto;
  }
  @media screen and (max-width: 1300px) {
    .affirmations__content {
      padding: 0rem 15rem 5rem 15rem;
    }
  }
  
  @media screen and (max-width: 900px) {
    .affirmations h2 {
      margin-bottom: 3rem;
    }
    .affirmations__content {
      padding: 0 4rem 5rem 4rem;
    }
  }
  
  @media screen and (max-width: 600px) {
    .affirmations__content {
      flex-direction: column;
      padding: 0 0rem 4rem 0rem;
      height: 75rem;
    }
    .affirmations__content img:nth-of-type(1) {
      width: 100%;
    }
    .affirmations__content img:nth-of-type(2) {
      width: 100%;
    }
    .affirmations__content img:nth-of-type(3) {
      width: 100%;
    }
    .affirmations__content img:nth-of-type(4) {
      width: 100%;
    }
    .affirmations__content img:nth-of-type(5) {
      width: 100%;
    }
    .affirmations__content img:nth-of-type(6) {
      width: 100%;
    }
    .affirmations__content img:nth-of-type(7) {
      width: 100%;
    }
    .affirmations__content img:nth-of-type(8) {
      width: 100%;
    }
    .affirmations__content img:nth-of-type(9) {
      width: 100%;
    }
    .affirmations__content img:nth-of-type(10) {
      width: 100%;
    }
  }
  
  @media screen and (max-width: 400px) {
    .affirmations {
      padding-top: 10rem;
    }
  }
{% endstyle %}