{% style %}
.girl {
    background-color: var(--primary-95);
    display: flex;
    justify-content: center;
    position: relative;
    padding-top: 4rem;
    z-index: 2;

  }
  
  .girl img {
    position: relative;
    height: 40rem;
  }
  
  .girl__text h3 {
    position: relative;
    font-size: var(--medium);
    font-weight: 300;
    color: var(--primary-20);
    margin-bottom: 10rem;
    z-index: 3;
  }
  
  .girl__text:nth-of-type(1) h3 {
    transform: rotate(10deg);
  }
  
  .girl__text:nth-of-type(1) h3:nth-of-type(2) {
    transform: rotate(-10deg);
  }
  
  .girl__text:nth-of-type(2) h3 {
    transform: rotate(-10deg);
  }
  
  .girl__text:nth-of-type(2) h3:nth-of-type(2) {
    transform: rotate(10deg);
  }
  
  .girl__text h3:nth-of-type(2n + 1) {
    animation: wiggle1 1.4s linear infinite alternate;
  }

  .girl__text h3:nth-of-type(2n) {
    animation: wiggle2 2s linear infinite alternate;
  }
  

  @media screen and (max-width: 900px) {
    .girl {
      padding: 5rem;
    }
    .girl__text h3 {
      font-size: var(--regular);
    }
  }
  
  @media screen and (max-width: 600px) {
    .girl {
      padding: 5rem 2rem;
      justify-content: space-between;
    }
    .girl img {
      position: absolute;
      top: 20%;
      right: 34%;
      height: 30rem;
    }
    .girl__text h3 {
      font-size: var(--regular);
    }
  }
  
  @media screen and (max-width: 400px) {
    .girl {
      height: min-content;
      padding: 7rem 1rem;
    }
    .girl img {
      position: absolute;
      top: 5%;
      right: 34%;
    }
    .girl__text h3 {
      position: relative;
      z-index: 1;
      font-size: var(--small);
      margin-bottom: 5rem;
    }
    .girl__text h3:nth-of-type(3) {
      margin-bottom: 0;
    }
  }
{% endstyle %}