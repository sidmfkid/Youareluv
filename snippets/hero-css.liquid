{% style %}

.hero {
    background-color: var(--primary-70);
    height: 60rem;
}

.hero__content {
    position: relative;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    height: inherit;
    width: 100%;
}

.hero__content-image {
    position: absolute;
    top: 0;
    left: 4rem;
    height: 60rem;
    width: 60rem;
    z-index: -1;
}

.hero__content-image div {
    background-image: url('{{'box-1.jpg' | asset_url }}');
    background-size: cover;
    background-clip: border-box;
    background-origin: border-box;
    background-repeat: no-repeat;
    pointer-events: none;
    -webkit-mask-image: url('{{'hero-mask1-1.svg' | asset_url}}');
    mask-image: url('{{'hero-mask1-1.svg' | asset_url}}');
    -webkit-mask-size: 100%;
    mask-size: 100%;
    -webkit-mask-repeat: no-repeat;
    mask-repeat: no-repeat;
    -webkit-mask-position: 0 0;
    mask-position: 0 0;
    -webkit-mask-clip: content-box;
    mask-clip: content-box;
    clip-path: url('{{'hero-mask1-1.svg' | asset_url}}');
    height: 100%;
}

.hero__content-card {
    z-index: 2;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 4rem;
    margin-right: calc(5rem + 5vw);
    width: calc(55rem + 5vw);
    background-color: var(--primary-98);
    height: min-content;
    align-self: center;
    gap: 3rem;
    text-align: center;
    box-shadow: 20px 20px 0 var(--primary-20);
}

@media screen and(max-width: 900px) {
    .hero {
        height: 90rem;
        padding-top: 5rem;
    }

    .hero__content {
        flex-direction: column;
        justify-content: flex-start;
        align-items: center;
    }

    .hero__content-image {
        left: 10%;
        top: 44%;
    }

    .hero__content-card {
        width: 90%;
        z-index: 0;
        margin: 8rem 0 0;
    }
}

@media screen and(max-width: 600px) {
    .hero {
        height: 94rem;
    }
}

@media screen and(max-width: 400px) {
    .hero {
        height: 95rem;
    }

    .hero__content-image {
        width: 60rem;
        top: 45%;
        left: -30%;
    }
}

.hero__content-card h1 {
    font-size: var(--large);
    font-weight: 600;
    color: var(--secondary-20);
}

.hero__content-card p {
    font-size: calc(1.2rem + 0.5vw);
    font-family: "Signika", cursive;
    color: var(--color-quinary);
}

{% endstyle %}
