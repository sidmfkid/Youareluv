{% style %}
.image-with-text {
    width: 100%;
    position: relative;
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
    justify-content: space-evenly;
    align-items: center;
    overflow: hidden;
    background: var(--secondary-30);
  }
  
  .image-with-text::after {
    content: "";
    position: absolute;
    top: 9rem;
    right: -1rem;
    width: calc(30rem + 20vw);
    height: 60rem;
    transform: scale(1.1);
    background: url({{'orange-shape.svg' | asset_url}});
    background-position: center;
    background-size: contain;
    background-repeat: no-repeat;
    z-index: 1;
  }
  
  .image-with-text__img {
    margin-left: 0rem;
    height: 80rem;
    width: 60rem;
  }
  
  .image-with-text__img div {
    background-image: url({{'black-family-1.jpg' | asset_url}});
    background-size: cover;
    background-clip: border-box;
    background-origin: border-box;
    background-repeat: no-repeat;
    pointer-events: none;
    -webkit-mask-image: url({{'new-shape.svg' | asset_url}});
    mask-image: url({{'new-shape.svg' | asset_url}});
    -webkit-mask-size: 100%;
    mask-size: 100%;
    -webkit-mask-repeat: no-repeat;
    mask-repeat: no-repeat;
    -webkit-mask-position: 0 0;
    mask-position: 0 0;
    -webkit-mask-clip: content-box;
    mask-clip: content-box;
    clip-path: url({{'new-shape.svg' | asset_url}});
    height: 100%;
  }
  
  .image-with-text__text {
    position: relative;
    z-index: 2;
    width: 35%;
  }
  
  .image-with-text__text h2 {
    font-size: var(--large);
    font-weight: 700;
    color: var(--primary-95);
  }
  
  .image-with-text__text p {
    font-size: var(--regular);
    color: var(--primary-95);
  }

  .image-with-text__text .btn.btn-secondary{
    display: block;
    margin-top: 4rem;
  }
  
  @media screen and (max-width: 900px) {
    .image-with-text {
      flex-direction: column;
      padding: 0 10rem 10rem 10rem;
    }
    .image-with-text::after {
      top: 55%;
      right: -10rem;
      width: 100%;
    }
    .image-with-text__img {
      width: 50rem;
      height: 70rem;
    }
    .image-with-text__text {
      width: 100%;
    }
  }
  
  @media screen and (max-width: 600px) {
    .image-with-text {
      padding: 0 1rem 5rem 1rem;
    }
    .image-with-text::after {
      top: 36rem;
      right: 0rem;
    }
    .image-with-text__img {
      width: 32rem;
      height: 45rem;
    }
    .image-with-text__text {
      padding: 0 3rem;
    }
    .image-with-text__text .btn.btn-secondary {
      width: 100%;
    }
  }
{% endstyle %}